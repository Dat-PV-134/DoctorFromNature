<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="10dp"
    app:cardElevation="5dp"
    app:cardCornerRadius="10dp"
    android:background="@color/white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/vItemDelivering"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/imgFirstOrderProduct"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_marginTop="20dp" />

            <TextView
                android:layout_marginTop="5dp"
                android:id="@+id/tvOrdersProductsName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="10dp"
                android:layout_toEndOf="@id/imgFirstOrderProduct"
                android:text="Tên các mặt hàng: \n +Hoa hồi khô x 3, \n +Táo tầu đỏ x 4, \n +Cây bạc hà khô x 5"
                android:textColor="@color/black"
                android:textSize="18sp" />
        </RelativeLayout>

        <TextView
            android:id="@+id/tvTotalOrderDelivering"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/vItemDelivering"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:text="Tổng thành tiền: 1.200.000đ"
            android:textColor="@color/app_main_color"
            android:textSize="15sp" />

        <Button
            android:id="@+id/btnOkOrders"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvTotalOrderDelivering"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/button_add_to_cart"
            android:padding="10dp"
            android:text="xác nhận đơn hàng"
            android:textColor="@color/white"
            android:textSize="13sp" />
    </RelativeLayout>
</androidx.cardview.widget.CardView>